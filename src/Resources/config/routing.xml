<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
    <route id="norbr_capture_done" path="/norbr/payment/done/{payum_token}">
        <default key="_controller">Sherlockode\SyliusNorbrPlugin\Controller\CheckoutController::captureDoneAction</default>
    </route>

    <route id="norbr_capture_failed" path="/norbr/payment/failed/{payum_token}">
        <default key="_controller">Sherlockode\SyliusNorbrPlugin\Controller\CheckoutController::captureFailedAction</default>
    </route>
</routes>
